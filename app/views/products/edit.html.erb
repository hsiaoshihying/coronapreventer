<% provide(:title, "Edit") %>
<h2>商品情報の変更</h2>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :商品%>
        <%= f.select :name, {マスク: 'マスク', ハンドソープ: 'ハンドソープ', 殺菌グッズ: '殺菌グッズ'} %>

        <%= f.label :値段 %>
        <%= f.text_field :price %>

        <%= f.label :総数量 %>
        <%= f.text_field :total_num %>

      <%= f.submit "変更", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>