<% provide(:title, "MyPage") %>
<h1>マイページ</h1>

<div class="row">
    <%= @store_user.name %><br>
    <%= @store_user.phone %><br>
    <%= @store_user.address %><br>
    <%= link_to "プロフィール変更", edit_store_user_path, class: "btn btn-lg btn-primary" %>
